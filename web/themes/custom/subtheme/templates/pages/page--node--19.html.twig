<script type="text/javascript">
var rows;
document.addEventListener("DOMContentLoaded", function(event) {


defer()





});


function defer(method) {
    if (window.jQuery) {
         rows = jQuery('table tr');
         loop_it();
    } else {
        setTimeout(function() { defer(method) }, 50);
    }
}










var index_nr=0;

function loop_it()
{

setTimeout(function(){
make_visible(index_nr);


},500)





}





function make_visible(index)
{

jQuery(rows[index_nr]).addClass('show_tr');


index_nr++;
loop_it();
}






</script>





